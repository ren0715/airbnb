<div class="container">
    <div class="container">
        <h4 class="text-center">Book unique places to stay and things to do.</h4>
        <%= form_tag search_path, method: :get do %>
            <div class="row mx-auto py-5">
                <div class="col-md-6">
                    <%# f.text_field :address_cont,class: 'form-control', id: "search", placeholder: "Where are you going?"%>
                    <%= text_field_tag :search, params[:search], placeholder: "Where are you going?",class: 'form-control' %>
                </div>
                <div class="col-md-2">
                    <%#f.text_field :start_date,class: 'btn btn-light w-100 text-center', id: "start_date", placeholder: "Start Date",readonly: true%>
                    <%= text_field_tag :start_date, params[:start_date], readonly: true, id: "start_date", placeholder: "Start Date",class: 'form-control',readonly: true %>
                </div>
                <div class="col-md-2">
                    <%#f.text_field :end_date,class: 'btn btn-light w-100 text-center', id: "end_date", placeholder: "End Date", disabled: true,readonly: true%>
                    <%= text_field_tag :end_date, params[:end_date], readonly: true, id: "end_date", placeholder: "End Date",class: 'form-control', disabled: true,readonly: true %>
                </div>        
                <div class="col-md-2">
                    <%# f.submit "Search",class: 'btn btn-success w-100', id: 'submit' %>
                    <%= submit_tag  "Search",class: 'btn btn-success w-100' %>
                </div>     
            </div>  
        <% end %>
        <script>
            $('#start_date').datepicker({
                dateFormat: 'dd-mm-yy',
                minDate: 0,
                maxDate: '3m',
                onSelect: function(selected) {
                    $('#end_date').datepicker("option", "minDate", selected);
                    $('#end_date').attr("disabled", false);
                }
            });
            $('#end_date').datepicker({
                dateFormat: 'dd-mm-yy',
                minDate: 0,
                maxDate: '3m',
                onSelect: function(selected) {
                    $('#start_date').datepicker("option", "maxDate", selected);
                }
            });
        </script>
    </div>
    <div class="container">
        <h1>Home</h1>
        <%=render 'rooms', rooms: @rooms%>
        <div class="paginate text-center">
            <%= will_paginate @rooms%>
        </div>
    </div>
</div>