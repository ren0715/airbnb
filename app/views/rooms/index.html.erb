<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%=render 'your'%>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Your Rooms</h2>
                </div>
                <div class="card-body">
                    <% @rooms.each do |room| %>
                        <div class="container row">
                            <div class="col-3"><%=image_tag room.photos.first.image, class: 'w-100', style: 'height: 100px;'%></div>
                            <div class="col-5">
                                <%=link_to room.room_name,room_path(room)%>
                            </div>
                            <div class="col-4 text-right">
                                <%= link_to 'Update',room_room_path(room),class: 'btn btn-info'%>
                            </div>
                        </div>
                        <hr>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>